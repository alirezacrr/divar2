                        <button class="btn btn-tool">کپی</button>
                    </div>
                </div>
                <div class="item-content">
                    <label>ایمیل</label>
                    <div>
                        <a class="item-value" href="#"><%= advers.email %></a>
                    </div>
                </div>
                <div class="item-content">
                    <div style="text-align: right">
                        <strong>هشدار پلیس :</strong>
                        <p>لطفا پیش از انجام معامله و هر نوع پرداخت وجه از صحت کالا یا خدمات ارائه شده، به صورت حضوری اطمینان حاصل نمایید.</p>
                    </div>
                </div>
            </div>
            <div>
                <div class="item">
                    <span class="item_title">دسته بندی</span>
                    <span class="item_title"><%= advers.category %></span>
                </div>
                <div class="item">
                    <span class="item_title">محل</span>
                    <span class="value"><%= advers.province %></span>
                </div>
                <div class="item">
                    <span class="item_title">نوع اگهی</span>
                    <span class="value"><%= advers.type %></span>
                </div>
                <div class="item">
                    <span class="item_title">قیمت</span>
                    <span class="value"><%= advers.price %></span>
                </div>
            </div>
            <div class="description-show">
                <h4><%= advers.descriptionAdver %></h4>
            </div>
        </div>

    </div>

</div>

<% function ago(val) {
    val = 0 | (Date.now() - val) / 1000;
    var unit, length = {
        ثانیه: 60, دقیقه: 60, ساعت: 24, روز: 7, هفته: 4.35,
        ماه: 12, سال: 10000
    }, result;

    for (unit in length) {
        result = val % length[unit];
        if (!(val = 0 | val / length[unit]))
            return result + ' ' + (result - 1 ? unit : unit) + ' ' + 'پیش';
    }
}
%>
